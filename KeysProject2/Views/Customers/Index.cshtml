@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@Html.Partial("_Modals")

<table class="table table-light table-hover" id="CustomersTable">
    <tr>
        <th>Customer Name</th>
        <th>Address</th>
        <th>Action(Edit)</th>
        <th>Action(Delete</th>
    </tr>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        //Add dataTable
        $(document).ready(function () {
            $("#CustomersTable").DataTable({
                ajax: {
                    url: "api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "address"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class = 'btn btn-warning' id='editCustomerBtn' edit-customer-id=" +
                                data +
                                ">Edit</button>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class = 'btn btn-danger' id='deleteCustomerBtn' delete-customer-id=" +
                                data +
                                ">Delete</button>";
                        }
                    }
                ]
            });

            //Add new customer
            $("#CustomerSubmit").click(function () {

                var formdata = {
                    "name": $("#CustomerName").val(),
                    "address": $("#CustomerAddress").val()
                };

                $.ajax({
                    url: "api/customers",
                    method: "POST",
                    data: JSON.stringify(formdata),
                    contentType: "application/json;charset=utf-8",
                    processData: true,
                    success: function () {
                        $("#CustomerModal").modal("hide");
                        location.reload(true);
                    },
                    error: function (xhr) {
                        alert(xhr.responseText);
                    }
                });
            });

            //Delete customer
            $("#customers").on("click",
                "#deleteCustomerBtn",
                function () {

                    var customerId = $(this).attr("delete-customer-id");

                    $("#deleteCustomerModal").modal("show");

                    $("#deleteCustomerSubmit").click(function () {

                        $.ajax({
                            url: "/api/customers/" + customerId,
                            method: "DELETE",
                            success: function () {
                                $("#deleteCustomerModal").modal("hide");
                                location.reload(true);
                            }
                        });
                    });
                });

            //Edit customer
            $("#customers").on("click",
                "#editCustomerBtn",
                function () {
                    var customerId = $(this).attr("edit-customer-id");

                    $("#editCustomerModal").modal("show");

                    $.ajax({
                        url: "api/customers/" + customerId,
                        method: "GET",
                        success: function (data) {

                            var customerData = JSON.parse(JSON.stringify(data));
                            $("#customerName").attr("placeholder", customerData.name);
                            $("#customerAddress").attr("placeholder", customerData.address);

                            $("#editCustomerSubmit").click(function () {
                                var formdata = {
                                    "name": $("#customerName").val(),
                                    "address": $("#customerAddress").val()
                                };
                                $.ajax({
                                    url: "/api/customers/" + customerId,
                                    method: "PUT",
                                    data: JSON.stringify(formdata),
                                    contentType: "application/json;charset=utf-8",
                                    processData: true,
                                    success: function () {
                                        $("#editCustomerModal").modal("hide");
                                        location.reload(true);
                                    },
                                    error: function (xhr) {
                                        alert(xhr.responseText);
                                    }
                                });
                            });
                        },
                        error: function (xhr) {
                            alert(xhr.responseText);
                        }
                    });
                });
        });
    </script>
}